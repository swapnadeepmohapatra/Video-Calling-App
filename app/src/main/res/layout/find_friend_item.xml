<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:elevation="20dp">

    <RelativeLayout
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_notification"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_image" />

        <TextView
            android:id="@+id/name_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_notification"
            android:layout_marginTop="5dp"
            android:text="User Name"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/request_accept_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_notification"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_green_light"
            android:padding="5dp"
            android:text="Accept Request" />

        <Button
            android:id="@+id/request_cancel_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/request_accept_button"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_red_light"
            android:padding="5dp"
            android:text="Cancel Request" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>